<h1>Add Transaction</h1>
<form action="/transaction/new" method="POST">
  <label>Order:</label>
  <select name="order_id" required>
    <% orders.forEach(order => { %>
      <option value="<%= order.order_id %>">Order ID: <%= order.order_id %></option>
    <% }) %>
  </select><br>
  
  <label>Total Amount:</label>
  <input type="number" name="total_amount" step="0.01" required><br>
  
  <label>Payment Method:</label>
  <input type="text" name="payment_method" required><br>
  
  <label>Date:</label>
  <input type="date" name="date" required><br>
  
  <button type="submit">Add</button>
</form>
<a href="/transaction">Back</a>

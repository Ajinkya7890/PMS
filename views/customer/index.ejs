<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Customer Management | PharmaSys</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <!-- Animate.css -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
  <style>
    :root {
      --primary-color: #4e73df;
      --secondary-color: #1cc88a;
      --dark-color: #5a5c69;
    }
    
    body {
      font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background-color: #f8f9fc;
      transition: all 0.3s ease;
    }
    
    [data-bs-theme="dark"] body {
      background-color: #1a1a2e;
      color: #f8f9fa;
    }
    
    .navbar-brand {
      font-weight: 800;
      font-size: 1.5rem;
    }
    
    .nav-link {
      font-weight: 600;
      position: relative;
      padding: 0.5rem 1rem;
    }
    
    .nav-link::after {
      content: '';
      position: absolute;
      width: 0;
      height: 2px;
      bottom: 0;
      left: 50%;
      background-color: var(--secondary-color);
      transition: all 0.3s ease;
      transform: translateX(-50%);
    }
    
    .nav-link:hover::after {
      width: 70%;
    }
    
    .table-container {
      background-color: white;
      border-radius: 0.5rem;
      box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
      overflow: hidden;
      transition: all 0.3s ease;
    }
    
    [data-bs-theme="dark"] .table-container {
      background-color: #16213e;
      box-shadow: 0 0.15rem 1.75rem 0 rgba(0, 0, 0, 0.3);
    }
    
    .table {
      margin-bottom: 0;
    }
    
    [data-bs-theme="dark"] .table {
      color: #f8f9fa;
    }
    
    [data-bs-theme="dark"] .table-dark {
      background-color: #0f0f1a;
    }
    
    [data-bs-theme="dark"] .table-striped>tbody>tr:nth-of-type(odd)>* {
      --bs-table-accent-bg: rgba(22, 33, 62, 0.5);
      color: var(--bs-table-striped-color);
    }
    
    [data-bs-theme="dark"] .table-hover>tbody>tr:hover>* {
      --bs-table-accent-bg: rgba(30, 45, 90, 0.7);
      color: var(--bs-table-hover-color);
    }
    
    .theme-toggle {
      cursor: pointer;
      border: none;
      background: none;
      font-size: 1.25rem;
      color: var(--dark-color);
      transition: all 0.3s ease;
    }
    
    [data-bs-theme="dark"] .theme-toggle {
      color: #f8f9fa;
    }
    
    .theme-toggle:hover {
      transform: rotate(30deg);
    }
    
    .navbar {
      box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
      transition: all 0.3s ease;
    }
    
    [data-bs-theme="dark"] .navbar {
      background-color: #16213e !important;
      box-shadow: 0 0.15rem 1.75rem 0 rgba(0, 0, 0, 0.3);
    }
    
    .btn-primary {
      background-color: var(--primary-color);
      border-color: var(--primary-color);
    }
    
    .btn-primary:hover {
      background-color: #2e59d9;
      border-color: #2653d4;
    }
    
    .btn-warning {
      background-color: #f6c23e;
      border-color: #f6c23e;
    }
    
    .btn-warning:hover {
      background-color: #dda20a;
      border-color: #d29400;
    }
    
    .customer-card {
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border: none;
      border-radius: 0.5rem;
      overflow: hidden;
      height: 100%;
    }
    
    .customer-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
    
    [data-bs-theme="dark"] .customer-card {
      background-color: #16213e;
    }
    
    [data-bs-theme="dark"] .customer-card:hover {
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
    }
    
    .customer-icon {
      font-size: 2.5rem;
      color: var(--primary-color);
    }
    
    [data-bs-theme="dark"] .customer-icon {
      color: var(--secondary-color);
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
    <div class="container">
      <a class="navbar-brand text-primary fw-bold" href="/">
        <i class="bi bi-capsule-pill me-2"></i>PharmaSys
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link active" href="/customer"><i class="bi bi-people-fill me-1"></i> Customers</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/order"><i class="bi bi-cart-check-fill me-1"></i> Orders</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/supplier"><i class="bi bi-truck me-1"></i> Suppliers</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/transaction"><i class="bi bi-credit-card-fill me-1"></i> Transactions</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/drug"><i class="bi bi-capsule me-1"></i> Drugs</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/inventory"><i class="bi bi-box-seam-fill me-1"></i> Inventory</a>
          </li>
        </ul>
        <div class="d-flex align-items-center">
          <button class="theme-toggle me-3" id="themeToggle">
            <i class="bi bi-moon-fill"></i>
          </button>
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown">
              <i class="bi bi-person-circle me-1"></i> Admin
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="#"><i class="bi bi-person-fill me-2"></i> Profile</a></li>
              <li><a class="dropdown-item" href="#"><i class="bi bi-gear-fill me-2"></i> Settings</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="#"><i class="bi bi-box-arrow-right me-2"></i> Logout</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container my-5 animate__animated animate__fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="mb-0"><i class="bi bi-people-fill text-primary me-2"></i>Customer Management</h1>
      <a href="/customer/new" class="btn btn-primary">
        <i class="bi bi-person-plus-fill me-2"></i>Add New Customer
      </a>
    </div>

    <!-- Customer Table -->
    <div class="table-container mb-5">
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover mb-0">
          <thead class="table-dark">
            <tr>
              <th class="text-center">ID</th>
              <th>Name</th>
              <th>Contact</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% customers.forEach(customer => { %>
              <tr class="animate__animated animate__fadeIn">
                <td class="text-center"><%= customer.customer_id %></td>
                <td><%= customer.name %></td>
                <td><%= customer.contact %></td>
                <td class="text-center">
                  <div class="d-flex justify-content-center gap-2">
                    <a href="/customer/edit/<%= customer.customer_id %>" class="btn btn-sm btn-warning me-1">
                      <i class="bi bi-pencil-fill"></i> Edit
                    </a>
                    <form action="/customer/delete/<%= customer.customer_id %>" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this customer?')">
                        <i class="bi bi-trash-fill"></i> Delete
                      </button>
                    </form>
                    <a href="/customer/view/<%= customer.customer_id %>" class="btn btn-sm btn-info">
                      <i class="bi bi-eye-fill"></i> View
                    </a>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Customer Summary Cards -->
    <div class="row g-4">
      <div class="col-md-4 animate__animated animate__fadeInLeft">
        <div class="customer-card card h-100">
          <div class="card-body text-center">
            <i class="bi bi-people customer-icon mb-3"></i>
            <h3 class="h4 mb-2">Total Customers</h3>
            <p class="display-5 fw-bold"><%= customers.length %></p>
          </div>
        </div>
      </div>
      <div class="col-md-4 animate__animated animate__fadeInUp">
        <div class="customer-card card h-100">
          <div class="card-body text-center">
            <i class="bi bi-calendar-check customer-icon mb-3"></i>
            <h3 class="h4 mb-2">Active This Month</h3>
            <p class="display-5 fw-bold">
              <% 
                const currentMonth = new Date().getMonth();
                const activeThisMonth = customers.filter(customer => {
                  if (!customer.last_purchase) return false;
                  return new Date(customer.last_purchase).getMonth() === currentMonth;
                }).length;
              %>
              <%= activeThisMonth %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-md-4 animate__animated animate__fadeInRight">
        <div class="customer-card card h-100">
          <div class="card-body text-center">
            <i class="bi bi-star customer-icon mb-3"></i>
            <h3 class="h4 mb-2">Loyalty Members</h3>
            <p class="display-5 fw-bold">
              <%= customers.filter(customer => customer.loyalty_member).length %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="mt-auto">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h5 class="mb-3"><i class="bi bi-capsule-pill me-2"></i> PharmaSys</h5>
          <p class="small">Comprehensive pharmacy management solution for modern healthcare providers.</p>
        </div>
        <div class="col-md-3">
          <h5 class="mb-3">Quick Links</h5>
          <ul class="list-unstyled">
            <li><a href="#" class="text-decoration-none">Documentation</a></li>
            <li><a href="#" class="text-decoration-none">Support</a></li>
            <li><a href="#" class="text-decoration-none">API</a></li>
          </ul>
        </div>
        <div class="col-md-3">
          <h5 class="mb-3">Contact</h5>
          <ul class="list-unstyled">
            <li><i class="bi bi-envelope me-2"></i> support@pharmasys.com</li>
            <li><i class="bi bi-telephone me-2"></i> +1 (555) 123-4567</li>
          </ul>
        </div>
      </div>
      <hr>
      <div class="text-center small">
        <p class="mb-0">&copy; 2025 Pharmacy Management System. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Theme toggle functionality
    const themeToggle = document.getElementById('themeToggle');
    const htmlElement = document.documentElement;
    
    // Check for saved theme preference or use preferred color scheme
    const savedTheme = localStorage.getItem('theme') || 
                      (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
    htmlElement.setAttribute('data-bs-theme', savedTheme);
    updateThemeIcon(savedTheme);
    
    themeToggle.addEventListener('click', () => {
      const currentTheme = htmlElement.getAttribute('data-bs-theme');
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      htmlElement.setAttribute('data-bs-theme', newTheme);
      localStorage.setItem('theme', newTheme);
      updateThemeIcon(newTheme);
    });
    
    function updateThemeIcon(theme) {
      const icon = themeToggle.querySelector('i');
      if (theme === 'dark') {
        icon.classList.remove('bi-moon-fill');
        icon.classList.add('bi-sun-fill');
      } else {
        icon.classList.remove('bi-sun-fill');
        icon.classList.add('bi-moon-fill');
      }
    }
    
    // Navbar shadow on scroll
    window.addEventListener('scroll', function() {
      const navbar = document.querySelector('.navbar');
      if (window.scrollY > 10) {
        navbar.classList.add('shadow-sm');
      } else {
        navbar.classList.remove('shadow-sm');
      }
    });
  </script>
</body>
</html>